<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background_2"
    tools:context=".ui.screens.GetStarActivity">


    <TextView
        android:id="@+id/txtCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/libre_franklin_light_italic"
        android:shadowColor="@color/whiteShadowColor"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btnButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnButton"
        android:layout_width="312dp"
        android:layout_height="354dp"
        android:background="@drawable/custom_red_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_star_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:src="@drawable/ic_star"
        android:visibility="invisible"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/btnButton"
        app:layout_constraintEnd_toEndOf="@+id/btnButton"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/btnButton"
        app:layout_constraintTop_toTopOf="@+id/btnButton"
        app:layout_constraintVertical_bias="0.36"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/secular_one"
        android:gravity="center"
        android:padding="15sp"
        android:shadowColor="@color/whiteShadowColor"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="@string/activity_get_star_text"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>