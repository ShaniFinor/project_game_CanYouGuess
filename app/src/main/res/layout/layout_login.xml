<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_background_layout"
    android:orientation="vertical">
    <!--    android:background="#B2FFFFFF"-->
    <!--    <ImageView-->
    <!--        android:id="@+id/close_login"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="end"-->
    <!--        android:layout_margin="10sp"-->
    <!--        android:background="@drawable/ic_close"></ImageView>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/secular_one"
        android:shadowColor="@color/titleShadowTextColor"
        android:shadowDx="-8"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="@string/login"
        android:textColor="@color/titleTextColor"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:background="@color/titleTextColor"/>

    <EditText
        android:id="@+id/etUserName_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#006200EE"
        android:hint="שם משתמש"
        android:fontFamily="@font/libre_franklin_light_italic"
        android:inputType="text"
        android:padding="15sp"
        android:textColorHighlight="#96D34F"
        android:textColorLink="#8BC34A"/>

    <EditText
        android:id="@+id/etEmail_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#006200EE"
        android:hint="אימייל"
        android:fontFamily="@font/libre_franklin_light_italic"
        android:inputType="textEmailAddress"
        android:padding="15sp"
        android:textColorHighlight="#96D34F"
        android:textColorLink="#8BC34A"/>

    <EditText
        android:id="@+id/etPassword_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#006200EE"
        android:hint="סיסמה"
        android:fontFamily="@font/libre_franklin_light_italic"
        android:inputType="numberPassword"
        android:padding="15sp"
        android:textColorHighlight="#9EDD55"
        android:textColorLink="#8BC34A"/>

    <Button
        android:id="@+id/btnLoginOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/background_ui_button"
        android:fontFamily="@font/secular_one"
        android:text="@string/login"
        android:textColor="@color/purple"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textForRegistration"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/libre_franklin_light_italic"
        android:shadowColor="@color/titleShadowTextColor"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="אם אתם לא רשומים, לחצו כאן"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:background="@color/titleShadowTextColor"/>
</LinearLayout>