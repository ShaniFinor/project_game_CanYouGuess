<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_background_layout"
    android:orientation="vertical">
    <!--    android:background="#B2FFFFFF"-->
    <ImageView
        android:id="@+id/close_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10sp"
        android:background="@drawable/ic_close"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/secular_one"
        android:shadowColor="#F888F8"
        android:shadowDx="-8"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="התחברות"
        android:textColor="#DD8135CC"
        android:textSize="30sp"></TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:background="#DD8135CC"></TextView>

    <EditText
        android:id="@+id/etUserName_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#006200EE"
        android:hint="שם משתמש"
        android:inputType="text"
        android:padding="15sp"
        android:textColorHighlight="#96D34F"
        android:textColorLink="#8BC34A"></EditText>

    <EditText
        android:id="@+id/etEmail_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#006200EE"
        android:hint="אימייל"
        android:inputType="textEmailAddress"
        android:padding="15sp"
        android:textColorHighlight="#96D34F"
        android:textColorLink="#8BC34A"></EditText>

    <EditText
        android:id="@+id/etPassword_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="#006200EE"
        android:hint="סיסמה"
        android:inputType="numberPassword"
        android:padding="15sp"
        android:textColorHighlight="#9EDD55"
        android:textColorLink="#8BC34A"></EditText>

    <Button
        android:id="@+id/btnLoginOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/gradient_background_3"
        android:fontFamily="@font/secular_one"
        android:shadowColor="#80FFFFFF"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="Login"
        android:textColor="#FFFFFF"></Button>

    <TextView
        android:id="@+id/textForRegistration"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/libre_franklin_light_italic"
        android:shadowColor="#3EB4E3"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="If you are not register yet, click here"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15sp"></TextView>

    <TextView
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:background="#3EB4E3"></TextView>
</LinearLayout>