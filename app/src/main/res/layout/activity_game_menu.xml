                android:shadowColor="#80FFFFFF"
                android:shadowDx="-4"
                android:shadowDy="4"
                android:shadowRadius="10"
                android:fontFamily="@font/libre_franklin_light_italic"
                android:text="4"
                android:textSize="30sp" />

            <Button
