<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_background_layout"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10sp"
        android:background="@drawable/ic_close"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/secular_one"
        android:shadowColor="#F888F8"
        android:shadowDx="-8"
        android:shadowDy="8"
        android:shadowRadius="2"
        android:text="הרשמה"
        android:textColor="#DD8135CC"
        android:textSize="30sp"></TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:background="#DD8135CC"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etUserName_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:autofillHints=""
            android:background="#006200EE"
            android:drawableEnd="@drawable/ic_name"
            android:hint="שם משתמש"
            android:inputType="text"
            android:padding="15sp"
            android:textColorHighlight="#96D34F"
            android:textColorLink="#8BC34A"></EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etEmail_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:autofillHints=""
            android:background="#006200EE"
            android:drawableEnd="@drawable/ic_email"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:padding="15sp"
            android:textColorHighlight="#9EDD55"
            android:textColorLink="#8BC34A"></EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etPassword_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:autofillHints=""
            android:background="#006200EE"
            android:hint="סיסמה"
            android:inputType="numberPassword"
            android:padding="15sp"
            android:textColorHighlight="#9EDD55"
            android:textColorLink="#8BC34A"></EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etConfirmPassword_register"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:autofillHints=""
            android:background="#006200EE"
            android:hint="אימות סיסמה"
            android:inputType="numberPassword"
            android:padding="15sp"
            android:textColorHighlight="#9EDD55"
            android:textColorLink="#8BC34A"></EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.spark.submitbutton.SubmitButton
        android:id="@+id/submitButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Sign up"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="#B671E1"
        app:sub_btn_ripple_color="#D681E4"
        app:sub_btn_tick_color="@color/white"></com.spark.submitbutton.SubmitButton>


