<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/playerImageView"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_winnings_chart_place1"
        app:layout_constraintStart_toEndOf="@+id/textView_winnings_chart_place1"
        app:layout_constraintTop_toTopOf="@+id/textView_winnings_chart_place1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_winnings_chart_place1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_winnings_chart_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="@+id/playerImageView"
        app:layout_constraintStart_toEndOf="@+id/playerImageView"
        app:layout_constraintTop_toTopOf="@+id/playerImageView" />

    <TextView
        android:id="@+id/textView_winnings_chart_winningsNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="num of winnings"
        app:layout_constraintBottom_toBottomOf="@+id/textView_winnings_chart_name1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_winnings_chart_name1"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/divider_horisontal"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>